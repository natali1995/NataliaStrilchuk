{
    "extends": [
        "stylelint-config-standard-scss",
        "stylelint-config-recommended-vue/scss"
    ],
    "rules": {
      "selector-class-pattern": "^([a-z][a-z0-9]*)((--?|__)?[a-z0-9]+)*$",
      "at-rule-no-unknown": [
          true,
          {
            "ignoreAtRules": [
              "tailwind"
            ]
          }
        ]
      }
}
